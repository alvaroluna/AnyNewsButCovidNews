<div class="row">
    <div class="col-12">
        <div class="jumbotron titleJumbotron">
            <div class="headerDivJumbotron">
                <div id="headerJumbotron">Mongo Scraper</div>
                <div id="subheaderJumbotron">NPR News Edition</div>
            </div>
        </div>
    </div>
</div>

<nav class="navbar navbar-expand" id="navbar">

    <ul class="navbar-nav">
        <li class="nav-item">
            <button type="button" class="btn btn-primary" onclick="window.location.href='/';"
                id="generalButton">Home</button>
        </li>
        <li class="nav-item">
            <button type="button" class="btn btn-primary" onclick="window.location.href='/saved';"
                id="generalButton">Saved
                Articles</button>
        </li>
    </ul>

</nav>

<div class="articleContainer">
    <div class="row">

        <div class="col-1">
        </div>

        <div class="col-10 articleColumn">

            {{#each articles}}

            <div class="card">
                <div class="card-header">
                    <a class="headlineLink" href={{link}} target="_blank">{{headline}}</a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-2">
                            <img class="articleImage" src={{photo}}>
                        </div>

                        <div class="col-8">
                            <p>{{summary}}</p>
                        </div>

                        <div class="col-2 buttonColumn">
                            <div class="row buttonRow">
                                <div class="col-12">
                                    <button type="button" class="btn btn-primary deleteSavedArticleButton generalButton"
                                        data-id={{id}}>Delete Article</button>
                                </div>
                            </div>
                            <div class="row buttonRow">
                                <div class="col-12">
                                    <button type="button" class="btn btn-primary addNoteButton generalButton"
                                        data-id={{id}} data-notes={{notes}}>Add Note</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {{/each}}

        </div>

        <div class="col-1">
        </div>

    </div>
</div>

<div class="modal fade" id="articleDeleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title articleDeleteTitle">Success!</h5>
            </div>
            <div class="modal-body articleDeleteBody">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary deleteSavedArticleModalButton"
                    id="deleteSavedArticleModalButton" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="noteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header noteModalHeader">
                {{!-- <h5 class="modal-title noteModalTitle" >Notes:</h5>
        <br> --}}
            </div>
            <div class="modal-body noteModalBody">

            </div>
            <button class='saveNoteButton'>Save Note</button>
            <div class='alertDiv'></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>